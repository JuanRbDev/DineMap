<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--Fondo del logo de la empresa-->
    <LinearLayout
        android:id="@+id/logoBanner"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/DineColorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/descripcionImg"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoBanner">

        <!--Botones para login y register-->
        <com.google.android.material.button.MaterialButton
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/DineColorSecundary"
            android:text="@string/login"
            android:textSize="15sp"
            app:cornerRadius="10dp"
            app:icon="@drawable/icon_login"
            app:iconGravity="textStart"
            app:iconPadding="20dp"
            app:iconSize="30dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/DineColorSecundary"
            android:text="@string/register"
            android:textSize="15sp"
            app:cornerRadius="10dp"
            app:icon="@drawable/icon_register"
            app:iconGravity="textStart"
            app:iconPadding="20dp"
            app:iconSize="30dp"/>

        <!--Botones para loguearse con otra cuenta-->
        <com.google.android.material.button.MaterialButton
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/Transparent"
            android:text="@string/loginGoogle"
            android:textColor="@color/black"
            app:cornerRadius="10dp"
            app:icon="@drawable/icon_google"
            app:iconSize="30dp"
            app:iconTint="@null"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/Transparent"
            android:text="@string/loginFacebook"
            android:textColor="@color/black"
            app:cornerRadius="10dp"
            app:icon="@drawable/icon_facebook"
            app:iconSize="30dp"
            app:iconTint="@null"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/Transparent"
            android:text="@string/otroMetodo"
            android:textColor="@color/black"
            app:cornerRadius="10dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>